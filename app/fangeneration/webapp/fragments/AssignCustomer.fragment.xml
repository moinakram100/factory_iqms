<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Assign Customer"
        id="assignCustomerDialog"
    >
        <FlexBox
            alignItems="Center"
            class="sapUiSmallMarginBegin"
        >
            <Label text="Customer Code :" />
            <Input
                width="150px"
                valueHelpRequest="onCustomerCode"
                showValueHelp="true"
                id="customer_id"
                valueHelpOnly="true"
            />
        </FlexBox>

        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="Submit"
                    press="onSubmitCustomer"
                />
                <Button
                    type="Reject"
                    text="Close"
                    press="onAssignCustClose"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
